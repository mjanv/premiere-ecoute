<div class="static-page">
  <div class="static-container-wide">
    <a href="/" class="static-back-link">← {gettext("Home")}</a>
    <h1 class="static-title" style="margin-bottom: 2rem; padding-bottom: 1rem;">{gettext("Premiere Ecoute Changelog")}</h1>

    <%= for entry <- @changelog do %>
      <div class="changelog-entry">
        <div class="changelog-entry-header">
          <h2 class="changelog-entry-title">
            <a href={"/changelog/#{entry.id}"} class="changelog-entry-link">[{entry.id}] {entry.date} - {entry.title}</a>
          </h2>
        </div>
        <div class="changelog-entry-content">
          {raw(entry.body)}
        </div>
      </div>
    <% end %>
  </div>
</div>
