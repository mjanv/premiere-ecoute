<div class="min-h-screen bg-black text-white p-8 font-mono">
  <div class="max-w-6xl mx-auto">
    <!-- ASCII Art Header -->
    <div class="text-center mb-8">
      <div class="text-xs sm:text-sm md:text-base lg:text-lg whitespace-pre mb-2 inline-block">
        <span class="text-red-500">██████╗ ██╗██╗     ██╗     ██████╗  ██████╗  █████╗ ██████╗ ██████╗</span>
        <span class="text-orange-500">██╔══██╗██║██║     ██║     ██╔══██╗██╔═══██╗██╔══██╗██╔══██╗██╔══██╗</span>
        <span class="text-yellow-500">██████╔╝██║██║     ██║     ██████╔╝██║   ██║███████║██████╔╝██║  ██║</span>
        <span class="text-green-500">██╔══██╗██║██║     ██║     ██╔══██╗██║   ██║██╔══██║██╔══██╗██║  ██║</span>
        <span class="text-blue-500">██████╔╝██║███████╗███████╗██████╔╝╚██████╔╝██║  ██║██║  ██║██████╔╝</span>
        <span class="text-purple-500">╚═════╝ ╚═╝╚══════╝╚══════╝╚═════╝  ╚═════╝ ╚═╝  ╚═╝╚═╝  ╚═╝╚═════╝</span>
      </div>
    </div>
    
<!-- Input Form -->
    <div class="border border-purple-500 p-6 mb-8">
      <.form for={@playlist_form} phx-submit="generate_billboard" phx-change="update_playlist_input" class="space-y-4">
        <div>
          <div id="playlist_container" phx-update="ignore">
            <textarea
              id="playlist_input"
              name="playlist_input"
              rows="10"
              placeholder="https://open.spotify.com/playlist/0GVUztIdLeLsftpMTwkYGf&#10;https://www.deezer.com/us/playlist/14170581581&#10;https://open.spotify.com/playlist/28Anwq5yS87ujCDWdFFr4b"
              class="w-full px-3 py-2 bg-gray-900 border border-purple-500 text-white placeholder-gray-400 focus:outline-none focus:border-purple-400 font-mono text-sm"
              phx-hook="PlaylistStorage"
            ></textarea>
          </div>
        </div>

        <div class="flex space-x-4">
          <button
            type="submit"
            disabled={@loading}
            class="px-6 py-2 bg-purple-600 hover:bg-purple-700 disabled:opacity-50 disabled:cursor-not-allowed text-white font-mono font-bold transition-colors duration-200"
          >
            <%= if @loading do %>
              [PROCESSING...]
            <% else %>
              [GENERATE BILLBOARD]
            <% end %>
          </button>

          <%= if @tracks != [] or @error do %>
            <button
              type="button"
              phx-click="clear_results"
              class="px-6 py-2 bg-purple-600 hover:bg-purple-700 text-white font-mono font-bold transition-colors duration-200"
            >
              [CLEAR]
            </button>
          <% end %>
        </div>
      </.form>
      
<!-- Error Display -->
      <%= if @error do %>
        <div class="mt-4 p-4 border border-purple-500">
          <div class="text-purple-500 whitespace-pre-line">┌─────────────────────────────────────────────────────────────────────┐
            │ ERROR: {String.pad_trailing(@error, 58)}│
            └─────────────────────────────────────────────────────────────────────┘</div>
        </div>
      <% end %>
    </div>
    
<!-- Results -->
    <%= if @tracks != [] do %>
      <div class="border border-purple-500 p-6 overflow-x-auto">
        
<!-- Tab Navigation -->
        <div class="mb-8">
          <div class="flex space-x-2 border-b border-purple-500">
            <button
              phx-click="switch_mode"
              phx-value-mode="track"
              class={"px-6 py-3 font-mono font-bold transition-colors duration-200 #{if @display_mode == :track, do: "bg-purple-600 text-white border-b-2 border-purple-300", else: "text-purple-400 hover:text-purple-300"}"}
            >
              [BY TRACK]
            </button>
            <button
              phx-click="switch_mode"
              phx-value-mode="artist"
              class={"px-6 py-3 font-mono font-bold transition-colors duration-200 #{if @display_mode == :artist, do: "bg-purple-600 text-white border-b-2 border-purple-300", else: "text-purple-400 hover:text-purple-300"}"}
            >
              [BY ARTIST]
            </button>
            <button
              phx-click="switch_mode"
              phx-value-mode="year"
              class={"px-6 py-3 font-mono font-bold transition-colors duration-200 #{if @display_mode == :year, do: "bg-purple-600 text-white border-b-2 border-purple-300", else: "text-purple-400 hover:text-purple-300"}"}
            >
              [BY YEAR]
            </button>
          </div>
        </div>
        
<!-- Top 3 Podium -->
        <%= if (@display_mode == :track and @tracks != [] and length(@tracks) >= 3) or (@display_mode == :artist and @artists != [] and length(@artists) >= 3) or (@display_mode == :year and @years != [] and length(@years) >= 3) do %>
          <div class="mb-12">
            <%= cond do %>
              <% @display_mode == :track -> %>
                <div class="flex justify-center items-end space-x-8 mb-12">
                  <!-- Track Mode Podium -->
                  <!-- 2nd Place -->
                  <div class="text-center">
                    <div class="bg-gray-700 border-4 border-gray-500 p-4 rounded-t-lg h-28 flex flex-col justify-end w-64">
                      <div class="text-4xl mb-2">🥈</div>
                      <div class="text-xl font-bold text-gray-300">#2</div>
                    </div>
                    <div
                      class="bg-gray-800 p-4 text-center w-64 cursor-pointer hover:bg-gray-700 transition-colors"
                      phx-click="select_track"
                      phx-value-rank="2"
                    >
                      <%= if length(@tracks) > 1 do %>
                        <div class="text-yellow-400 font-bold text-lg">{Enum.at(@tracks, 1).count_text}</div>
                        <div class="text-white font-semibold text-base truncate">{Enum.at(@tracks, 1).artist}</div>
                        <div class="text-gray-300 text-base truncate">{Enum.at(@tracks, 1).name}</div>
                      <% end %>
                    </div>
                  </div>
                  
<!-- 1st Place -->
                  <div class="text-center">
                    <div class="bg-yellow-600 border-4 border-yellow-400 p-4 rounded-t-lg h-32 flex flex-col justify-end w-64">
                      <div class="text-5xl mb-2">👑</div>
                      <div class="text-2xl font-bold text-yellow-100">#1</div>
                    </div>
                    <div
                      class="bg-yellow-700 p-4 text-center w-64 cursor-pointer hover:bg-yellow-600 transition-colors"
                      phx-click="select_track"
                      phx-value-rank="1"
                    >
                      <%= if length(@tracks) > 0 do %>
                        <div class="text-yellow-200 font-bold text-xl">{Enum.at(@tracks, 0).count_text}</div>
                        <div class="text-white font-semibold text-lg truncate">{Enum.at(@tracks, 0).artist}</div>
                        <div class="text-yellow-100 text-lg truncate">{Enum.at(@tracks, 0).name}</div>
                      <% end %>
                    </div>
                  </div>
                  
<!-- 3rd Place -->
                  <div class="text-center">
                    <div class="bg-orange-700 border-4 border-orange-500 p-4 rounded-t-lg h-24 flex flex-col justify-end w-64">
                      <div class="text-3xl mb-2">🥉</div>
                      <div class="text-xl font-bold text-orange-200">#3</div>
                    </div>
                    <div
                      class="bg-orange-800 p-4 text-center w-64 cursor-pointer hover:bg-orange-700 transition-colors"
                      phx-click="select_track"
                      phx-value-rank="3"
                    >
                      <%= if length(@tracks) > 2 do %>
                        <div class="text-orange-400 font-bold text-lg">{Enum.at(@tracks, 2).count_text}</div>
                        <div class="text-white font-semibold text-base truncate">{Enum.at(@tracks, 2).artist}</div>
                        <div class="text-orange-200 text-base truncate">{Enum.at(@tracks, 2).name}</div>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% @display_mode == :artist -> %>
                <div class="flex justify-center items-end space-x-8 mb-12">
                  <!-- Artist Mode Podium -->
                  <!-- 2nd Place -->
                  <div class="text-center">
                    <div class="bg-gray-700 border-4 border-gray-500 p-4 rounded-t-lg h-28 flex flex-col justify-end w-64">
                      <div class="text-4xl mb-2">🥈</div>
                      <div class="text-xl font-bold text-gray-300">#2</div>
                    </div>
                    <div
                      class="bg-gray-800 p-4 text-center w-64 cursor-pointer hover:bg-gray-700 transition-colors"
                      phx-click="select_artist"
                      phx-value-rank="2"
                    >
                      <%= if length(@artists) > 1 do %>
                        <div class="text-yellow-400 font-bold text-lg">{Enum.at(@artists, 1).count_text}</div>
                        <div class="text-white font-semibold text-base truncate">{Enum.at(@artists, 1).artist}</div>
                        <div class="text-gray-300 text-base truncate">{Enum.at(@artists, 1).track_count} tracks</div>
                      <% end %>
                    </div>
                  </div>
                  
<!-- 1st Place -->
                  <div class="text-center">
                    <div class="bg-yellow-600 border-4 border-yellow-400 p-4 rounded-t-lg h-32 flex flex-col justify-end w-64">
                      <div class="text-5xl mb-2">👑</div>
                      <div class="text-2xl font-bold text-yellow-100">#1</div>
                    </div>
                    <div
                      class="bg-yellow-700 p-4 text-center w-64 cursor-pointer hover:bg-yellow-600 transition-colors"
                      phx-click="select_artist"
                      phx-value-rank="1"
                    >
                      <%= if length(@artists) > 0 do %>
                        <div class="text-yellow-200 font-bold text-xl">{Enum.at(@artists, 0).count_text}</div>
                        <div class="text-white font-semibold text-lg truncate">{Enum.at(@artists, 0).artist}</div>
                        <div class="text-yellow-100 text-lg truncate">{Enum.at(@artists, 0).track_count} tracks</div>
                      <% end %>
                    </div>
                  </div>
                  
<!-- 3rd Place -->
                  <div class="text-center">
                    <div class="bg-orange-700 border-4 border-orange-500 p-4 rounded-t-lg h-24 flex flex-col justify-end w-64">
                      <div class="text-3xl mb-2">🥉</div>
                      <div class="text-xl font-bold text-orange-200">#3</div>
                    </div>
                    <div
                      class="bg-orange-800 p-4 text-center w-64 cursor-pointer hover:bg-orange-700 transition-colors"
                      phx-click="select_artist"
                      phx-value-rank="3"
                    >
                      <%= if length(@artists) > 2 do %>
                        <div class="text-orange-400 font-bold text-lg">{Enum.at(@artists, 2).count_text}</div>
                        <div class="text-white font-semibold text-base truncate">{Enum.at(@artists, 2).artist}</div>
                        <div class="text-orange-200 text-base truncate">{Enum.at(@artists, 2).track_count} tracks</div>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% true -> %>
                <div class="flex justify-center items-end space-x-8 mb-12">
                  <!-- Year Mode Podium -->
                  <% # AIDEV-NOTE: Find years with podium ranks for correct display by occurrence count
                  first_place = Enum.find(@years, fn year -> Map.get(year, :podium_rank) == 1 end)
                  second_place = Enum.find(@years, fn year -> Map.get(year, :podium_rank) == 2 end)
                  third_place = Enum.find(@years, fn year -> Map.get(year, :podium_rank) == 3 end) %>
                  <!-- 2nd Place -->
                  <div class="text-center">
                    <div class="bg-gray-700 border-4 border-gray-500 p-4 rounded-t-lg h-28 flex flex-col justify-end w-64">
                      <div class="text-4xl mb-2">🥈</div>
                      <div class="text-xl font-bold text-gray-300">#2</div>
                    </div>
                    <div
                      class="bg-gray-800 p-4 text-center w-64 cursor-pointer hover:bg-gray-700 transition-colors"
                      phx-click="select_year"
                      phx-value-rank={if second_place, do: second_place.display_rank, else: "2"}
                    >
                      <%= if second_place do %>
                        <div class="text-yellow-400 font-bold text-lg">{second_place.podium_count_text}</div>
                        <div class="text-white font-semibold text-base truncate">{second_place.year}</div>
                        <div class="text-gray-300 text-base truncate">{second_place.track_count} tracks</div>
                      <% end %>
                    </div>
                  </div>
                  
<!-- 1st Place -->
                  <div class="text-center">
                    <div class="bg-yellow-600 border-4 border-yellow-400 p-4 rounded-t-lg h-32 flex flex-col justify-end w-64">
                      <div class="text-5xl mb-2">👑</div>
                      <div class="text-2xl font-bold text-yellow-100">#1</div>
                    </div>
                    <div
                      class="bg-yellow-700 p-4 text-center w-64 cursor-pointer hover:bg-yellow-600 transition-colors"
                      phx-click="select_year"
                      phx-value-rank={if first_place, do: first_place.display_rank, else: "1"}
                    >
                      <%= if first_place do %>
                        <div class="text-yellow-200 font-bold text-xl">{first_place.podium_count_text}</div>
                        <div class="text-white font-semibold text-lg truncate">{first_place.year}</div>
                        <div class="text-yellow-100 text-lg truncate">{first_place.track_count} tracks</div>
                      <% end %>
                    </div>
                  </div>
                  
<!-- 3rd Place -->
                  <div class="text-center">
                    <div class="bg-orange-700 border-4 border-orange-500 p-4 rounded-t-lg h-24 flex flex-col justify-end w-64">
                      <div class="text-3xl mb-2">🥉</div>
                      <div class="text-xl font-bold text-orange-200">#3</div>
                    </div>
                    <div
                      class="bg-orange-800 p-4 text-center w-64 cursor-pointer hover:bg-orange-700 transition-colors"
                      phx-click="select_year"
                      phx-value-rank={if third_place, do: third_place.display_rank, else: "3"}
                    >
                      <%= if third_place do %>
                        <div class="text-orange-400 font-bold text-lg">{third_place.podium_count_text}</div>
                        <div class="text-white font-semibold text-base truncate">{third_place.year}</div>
                        <div class="text-orange-200 text-base truncate">{third_place.track_count} tracks</div>
                      <% end %>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
        <% end %>
        
<!-- Full List -->
        <div class="font-mono text-lg">
          <%= cond do %>
            <% @display_mode == :track -> %>
              <%= for track <- @tracks do %>
                <div
                  class="flex items-center space-x-2 hover:bg-gray-800 p-1 cursor-pointer transition-colors"
                  phx-click="select_track"
                  phx-value-rank={track.rank}
                >
                  <span class={"#{track.rank_style_class} font-bold w-16 text-right"}>{track.rank_text}</span>
                  <span class={"#{track.count_style_class} w-12"}>{track.count_text}</span>
                  <span class="text-white font-semibold flex-1 truncate">{track.artist}</span>
                  <span class="text-gray-300">-</span>
                  <span class="text-gray-100 flex-1 truncate">{track.name}</span>
                </div>
              <% end %>
            <% @display_mode == :artist -> %>
              <%= for artist <- @artists do %>
                <div
                  class="flex items-center space-x-2 hover:bg-gray-800 p-1 cursor-pointer transition-colors"
                  phx-click="select_artist"
                  phx-value-rank={artist.rank}
                >
                  <span class={"#{artist.rank_style_class} font-bold w-16 text-right"}>{artist.rank_text}</span>
                  <span class={"#{artist.count_style_class} w-12"}>{artist.count_text}</span>
                  <span class="text-white font-semibold flex-1 truncate">{artist.artist}</span>
                  <span class="text-gray-300">-</span>
                  <span class="text-gray-100 flex-1 truncate">{artist.track_count} tracks</span>
                </div>
              <% end %>
            <% true -> %>
              <%= for year <- @years do %>
                <div
                  class="flex items-center space-x-2 hover:bg-gray-800 p-1 cursor-pointer transition-colors"
                  phx-click="select_year"
                  phx-value-rank={year.display_rank}
                >
                  <span class={"#{year.rank_style_class} font-bold w-16 text-right"}>{year.rank_text}</span>
                  <span class={"#{year.count_style_class} w-96"}>{year.count_text}</span>
                  <span class="text-white font-semibold flex-1 truncate">{year.year}</span>
                  <span class="text-gray-300">-</span>
                  <span class="text-gray-100 flex-1 truncate">{year.track_count} tracks</span>
                </div>
              <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
    
<!-- Loading State -->
    <%= if @loading do %>
      <div class="border border-purple-500 p-8 text-center">
        <div class="text-purple-500 mb-4 whitespace-pre-line">
          ┌─────────────────────────────────────────────────────────────────────┐
          │ {String.pad_trailing(@progress_text, 67)}│
          └─────────────────────────────────────────────────────────────────────┘
        </div>
        <div class="text-purple-500 font-mono mb-4">
          <!-- Progress bar -->
          <div class="bg-gray-800 border border-purple-500 h-4 w-full relative overflow-hidden">
            <div
              class="bg-purple-500 h-full transition-all duration-300 ease-out"
              style={"width: #{@progress}%"}
            >
            </div>
            <div class="absolute inset-0 flex items-center justify-center text-xs text-white font-mono">
              {@progress}%
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
<!-- Details Modal -->
  <%= if @show_modal and (@selected_track != nil or @selected_artist != nil or @selected_year != nil) do %>
    <div class="fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50" phx-click="close_modal">
      <div
        class="bg-gray-900 border-2 border-purple-500 rounded-lg p-8 max-w-4xl w-full mx-4 relative"
        phx-click="stop_propagation"
      >
        <button class="absolute top-4 right-4 text-gray-400 hover:text-white text-2xl" phx-click="close_modal">×</button>

        <%= if @selected_track do %>
          <!-- Track Modal -->
          <div class="text-center mb-6">
            <div class="text-3xl mb-4">{@selected_track.rank_text}</div>
            <div class="flex items-center justify-center space-x-4">
              <h2 class="text-xl font-bold text-white">
                {@selected_track.artist} - <span class="text-gray-300">{@selected_track.name}</span>
              </h2>
              <div class="flex space-x-2">
                <%= if @selected_track.spotify_url do %>
                  <a
                    href={@selected_track.spotify_url}
                    target="_blank"
                    class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-semibold transition-colors text-sm"
                  >
                    Spotify
                  </a>
                <% end %>
                <%= if @selected_track.deezer_url do %>
                  <a
                    href={@selected_track.deezer_url}
                    target="_blank"
                    class="bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded-lg font-semibold transition-colors text-sm"
                  >
                    Deezer
                  </a>
                <% end %>
              </div>
            </div>
          </div>

          <div class="space-y-4">
            <div class="border-t border-gray-700 pt-4">
              <h3 class="text-lg font-semibold text-white mb-4">Found in playlists:</h3>
              <div class="space-y-2 max-h-40 overflow-y-auto">
                <%= for source <- @selected_track.playlist_sources do %>
                  <div class="bg-gray-800 p-3 rounded-lg">
                    <a
                      href={source.playlist_url}
                      target="_blank"
                      class="text-purple-400 hover:text-purple-300 text-sm text-center block break-all"
                    >
                      {source.playlist_url}
                    </a>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>

        <%= if @selected_artist do %>
          <!-- Artist Modal -->
          <div class="text-center mb-6">
            <div class="text-3xl mb-4">{@selected_artist.rank_text}</div>
            <h2 class="text-2xl font-bold text-white mb-2">{@selected_artist.artist}</h2>
            <div class="text-lg text-gray-300">
              {@selected_artist.total_count} occurrences • {@selected_artist.track_count} tracks
            </div>
          </div>

          <div class="space-y-4">
            <div class="border-t border-gray-700 pt-4">
              <h3 class="text-lg font-semibold text-white mb-4">Tracks by this artist:</h3>
              <div class="space-y-2 max-h-80 overflow-y-auto">
                <%= for track <- @selected_artist.tracks do %>
                  <div class="bg-gray-800 p-4 rounded-lg flex items-center justify-between">
                    <div class="flex-1">
                      <div class="text-white font-semibold">{track.name}</div>
                      <div class="text-gray-400 text-sm">{track.count} occurrences</div>
                    </div>
                    <div class="flex space-x-2 ml-4">
                      <%= if track.spotify_url do %>
                        <a
                          href={track.spotify_url}
                          target="_blank"
                          class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded font-semibold transition-colors text-sm"
                        >
                          Spotify
                        </a>
                      <% end %>
                      <%= if track.deezer_url do %>
                        <a
                          href={track.deezer_url}
                          target="_blank"
                          class="bg-orange-600 hover:bg-orange-700 text-white px-3 py-1 rounded font-semibold transition-colors text-sm"
                        >
                          Deezer
                        </a>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>

        <%= if @selected_year do %>
          <!-- Year Modal -->
          <div class="text-center mb-6">
            <div class="text-3xl mb-4">{@selected_year.rank_text}</div>
            <h2 class="text-2xl font-bold text-white mb-2">{@selected_year.year}</h2>
            <div class="text-lg text-gray-300">
              {@selected_year.total_count} occurrences • {@selected_year.track_count} tracks
            </div>
          </div>

          <div class="space-y-4">
            <div class="border-t border-gray-700 pt-4">
              <h3 class="text-lg font-semibold text-white mb-4">Tracks from this year:</h3>
              <div class="space-y-2 max-h-80 overflow-y-auto">
                <%= for track <- @selected_year.tracks do %>
                  <div class="bg-gray-800 p-4 rounded-lg flex items-center justify-between">
                    <div class="flex-1">
                      <div class="text-white font-semibold">{track.artist} - {track.name}</div>
                      <div class="text-gray-400 text-sm">{track.count} occurrences</div>
                    </div>
                    <div class="flex space-x-2 ml-4">
                      <%= if track.spotify_url do %>
                        <a
                          href={track.spotify_url}
                          target="_blank"
                          class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded font-semibold transition-colors text-sm"
                        >
                          Spotify
                        </a>
                      <% end %>
                      <%= if track.deezer_url do %>
                        <a
                          href={track.deezer_url}
                          target="_blank"
                          class="bg-orange-600 hover:bg-orange-700 text-white px-3 py-1 rounded font-semibold transition-colors text-sm"
                        >
                          Deezer
                        </a>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
