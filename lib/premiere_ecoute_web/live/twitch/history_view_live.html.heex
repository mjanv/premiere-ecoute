                            phx-value-period="month"
                            class={"px-3 py-1 rounded-lg text-sm font-medium transition-all duration-200 #{if @messages_period == "month", do: "bg-blue-600 text-white", else: "bg-slate-700/50 text-slate-300 hover:bg-slate-700"}"}
                          >
                            Month
