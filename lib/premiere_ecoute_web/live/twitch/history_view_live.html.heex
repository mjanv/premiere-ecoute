                            d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
                          >
                          </path>
                        </svg>
                      </div>
                      <p class="text-sm font-medium text-slate-300">Loading subscriptions data...</p>
                    </div>
                  </div>
                </:loading>
                <:failed :let={_failure}>
                  <div class="rounded-xl border border-red-500/50 bg-red-950/30 backdrop-blur p-6">
                    <div class="flex items-start gap-3">
                      <svg class="w-5 h-5 text-red-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path
                          fill-rule="evenodd"
                          d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                          clip-rule="evenodd"
                        >
                        </path>
                      </svg>
                      <p class="text-sm font-medium text-red-300">Failed to load subscriptions data</p>
                    </div>
                  </div>
                </:failed>

                <%= if subscriptions do %>
                  <div class="space-y-6">
                    <!-- Subscriptions per Period Graph -->
                    <div class="rounded-xl border border-pink-500/30 bg-gradient-to-br from-slate-800/50 to-slate-900/50 backdrop-blur overflow-hidden">
                      <div class="p-6 border-b border-slate-700/50 flex items-center justify-between">
                        <div>
                          <h3 class="text-lg font-semibold text-white">
                            Subscriptions per {String.capitalize(@subscriptions_period)}
                          </h3>
                          <p class="text-sm text-slate-400 mt-1">Channel subscriptions over time</p>
                        </div>
                        <div class="flex gap-2">
                          <button
                            phx-click="change_subscriptions_period"
                            phx-value-period="month"
                            class={"px-3 py-1 rounded-lg text-sm font-medium transition-all duration-200 #{if @subscriptions_period == "month", do: "bg-pink-600 text-white", else: "bg-slate-700/50 text-slate-300 hover:bg-slate-700"}"}
                          >
                            Month
                          </button>
                          <button
                            phx-click="change_subscriptions_period"
                            phx-value-period="year"
                            class={"px-3 py-1 rounded-lg text-sm font-medium transition-all duration-200 #{if @subscriptions_period == "year", do: "bg-pink-600 text-white", else: "bg-slate-700/50 text-slate-300 hover:bg-slate-700"}"}
                          >
                            Year
                          </button>
                        </div>
                      </div>
                      <div class="p-6">
                        <.live_component
                          module={PremiereEcouteWeb.Components.Live.Graph}
                          id="subscriptions-per-period-graph"
                          title=""
                          data={prepare_subscriptions_graph_data(subscriptions, @subscriptions_period)}
                          x="date"
                          y="subscriptions"
                        />
                      </div>
                    </div>
                  </div>
                <% else %>
                  <div class="rounded-xl border border-slate-700/50 bg-slate-800/30 backdrop-blur p-6">
                    <div class="flex items-start gap-3">
                      <svg class="w-5 h-5 text-slate-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path
                          fill-rule="evenodd"
                          d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                          clip-rule="evenodd"
                        >
                        </path>
                      </svg>
                      <p class="text-sm font-medium text-slate-300">No subscriptions data found in this export</p>
                    </div>
                  </div>
                <% end %>
              </.async_result>
            </div>
          <% else %>
            <!-- Error State - File Not Found -->
            <div class="space-y-6 animate-fadeIn max-w-2xl mx-auto">
              <div class="text-center space-y-4 mb-8">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gradient-to-br from-red-500 to-red-600 shadow-lg shadow-red-500/50">
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </div>
                <h2 class="text-3xl font-bold text-white">File Not Found</h2>
                <p class="text-slate-300">The uploaded file could not be found or is invalid</p>
              </div>

              <div class="flex gap-3 pt-4">
                <a
                  href={~p"/twitch/history"}
                  class="flex-1 px-6 py-3 rounded-lg font-semibold text-white bg-gradient-to-r from-purple-600 to-cyan-600 hover:from-purple-500 hover:to-cyan-500 transition-all duration-200 active:scale-95 text-center"
                >
                  Try Again
                </a>
              </div>
            </div>
          <% end %>
        </.async_result>
      </div>
    </main>
    
<!-- Footer -->
    <footer class="border-t border-slate-800 backdrop-blur-md bg-slate-950/40 text-center py-6">
      <p class="text-sm text-slate-500">
        No data is stored. Your file is processed and discarded immediately.
      </p>
    </footer>
  </div>

  <style>
    @keyframes blob {
      0%, 100% {
        transform: translate(0, 0) scale(1);
      }
      33% {
        transform: translate(30px, -50px) scale(1.1);
      }
      66% {
        transform: translate(-20px, 20px) scale(0.9);
      }
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-blob {
      animation: blob 7s infinite;
    }

    .animation-delay-2000 {
      animation-delay: 2s;
    }

    .animation-delay-4000 {
      animation-delay: 4s;
    }

    .animate-fadeIn {
      animation: fadeIn 0.6s ease-out;
    }

    .active\:scale-95:active {
      transform: scale(0.95);
    }
  </style>
</div>
