                    <p class="text-sm text-orange-300 font-medium">
                      {format_date(history.start_time)}<br />
                      <span class="text-xs text-slate-500">to</span> <br />
                      {format_date(history.end_time)}
                    </p>
                  </div>
                </div>
              </div>
              
<!-- Follows Data Section -->
