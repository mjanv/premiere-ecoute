<div
  id="billboard-container"
  class="min-h-screen text-white p-4 font-mono relative overflow-hidden synthwave-bg"
  phx-hook="CopyToClipboard"
>
  <div class="max-w-6xl mx-auto">
    <!-- ASCII Art Header -->
    <div class="text-center mb-4">
      <pre class="ascii-art text-xs sm:text-sm md:text-base lg:text-lg mb-1 inline-block font-mono synthwave-title">
<span class="text-red-500">██████╗ ██╗██╗     ██╗     ██████╗  ██████╗  █████╗ ██████╗ ██████╗</span>
<span class="text-orange-500">██╔══██╗██║██║     ██║     ██╔══██╗██╔═══██╗██╔══██╗██╔══██╗██╔══██╗</span>
<span class="text-yellow-500">██████╔╝██║██║     ██║     ██████╔╝██║   ██║███████║██████╔╝██║  ██║</span>
<span class="text-green-500">██╔══██╗██║██║     ██║     ██╔══██╗██║   ██║██╔══██║██╔══██╗██║  ██║</span>
<span class="text-blue-500">██████╔╝██║███████╗███████╗██████╔╝╚██████╔╝██║  ██║██║  ██║██████╔╝</span>
<span class="text-purple-500">╚═════╝ ╚═╝╚══════╝╚══════╝╚═════╝  ╚═════╝ ╚═╝  ╚═╝╚═╝  ╚═╝╚═════╝</span>
      </pre>
    </div>
    
<!-- Input Form -->
    <%= if @tracks == [] and not @loading do %>
      <div class="border border-purple-500 p-4 mb-4">
        <.form for={@playlist_form} phx-submit="generate_billboard" phx-change="update_playlist_input" class="space-y-4">
          <div>
            <div id="playlist_container" phx-update="ignore">
              <textarea
                id="playlist_input"
                name="playlist_input"
                rows="6"
                placeholder="https://open.spotify.com/playlist/0GVUztdILeLsftpTMwkYGf&#10;https://www.deezer.com/us/playlist/11173584581"
                class="w-full px-3 py-2 bg-gray-900 border border-purple-500 text-white placeholder-gray-400 focus:outline-none focus:border-purple-400 font-mono text-sm"
                phx-hook="PlaylistStorage"
              ></textarea>
            </div>
          </div>

          <div class="flex space-x-4">
            <button
              type="submit"
              disabled={@loading}
              class="px-4 py-2 bg-purple-600 hover:bg-purple-700 disabled:opacity-50 disabled:cursor-not-allowed text-white font-mono font-bold transition-colors duration-200 text-sm"
            >
              [GENERATE BILLBOARD]
            </button>
          </div>
        </.form>
      </div>
    <% end %>
    
<!-- Clear Button (when results exist) -->
    <%= if @tracks != [] do %>
      <div class="border border-purple-500 p-3 mb-4">
        <div class="flex justify-center">
          <button
            type="button"
            phx-click="clear_results"
            class="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white font-mono font-bold transition-colors duration-200 text-sm"
          >
            [CLEAR BILLBOARD]
          </button>
        </div>
      </div>
    <% end %>
    
<!-- Error Display -->
    <%= if @error do %>
      <div class="mt-4 p-4 border border-purple-500">
        <div class="text-purple-500 whitespace-pre-line">
          ┌─────────────────────────────────────────────────────────────────────┐
          │ ERROR: {String.pad_trailing(@error, 30)} │
          └─────────────────────────────────────────────────────────────────────┘
        </div>
      </div>
    <% end %>
    
<!-- Results -->
    <%= if @tracks != [] do %>
      <div class="border border-purple-500 p-3 overflow-x-auto">
        
<!-- AIDEV-NOTE: Simplified compact layout active -->
        <div class="bg-green-900/30 border border-green-500 p-2 mb-2 text-center">
          <span class="text-green-300 text-xs font-bold">✓ SIMPLIFIED COMPACT LAYOUT ACTIVE</span>
        </div>
        
<!-- Header with Tab Navigation and Copy Button -->
        <div class="flex justify-between items-center mb-3 border-b border-purple-500 pb-2">
          <div class="flex space-x-1">
            <button
              phx-click="switch_mode"
              phx-value-mode="track"
              class={"px-2 py-1 font-mono font-bold transition-colors duration-200 text-xs #{if @display_mode == :track, do: "bg-purple-600 text-white", else: "text-purple-400 hover:text-purple-300"}"}
            >
              TRACK
            </button>
            <button
              phx-click="switch_mode"
              phx-value-mode="artist"
              class={"px-2 py-1 font-mono font-bold transition-colors duration-200 text-xs #{if @display_mode == :artist, do: "bg-purple-600 text-white", else: "text-purple-400 hover:text-purple-300"}"}
            >
              ARTIST
            </button>
            <button
              phx-click="switch_mode"
              phx-value-mode="year"
              class={"px-2 py-1 font-mono font-bold transition-colors duration-200 text-xs #{if @display_mode == :year, do: "bg-purple-600 text-white", else: "text-purple-400 hover:text-purple-300"}"}
            >
              YEAR
            </button>
            <button
              phx-click="switch_mode"
              phx-value-mode="playlist"
              class={"px-2 py-1 font-mono font-bold transition-colors duration-200 text-xs #{if @display_mode == :playlist, do: "bg-purple-600 text-white", else: "text-purple-400 hover:text-purple-300"}"}
            >
              PLAYLIST
            </button>
          </div>
          <button
            phx-click="copy_billboard"
            class="px-3 py-1 bg-green-600 hover:bg-green-700 text-white font-mono font-bold transition-colors duration-200 text-xs"
            title="Copy billboard to clipboard"
          >
            [COPY]
          </button>
        </div>
        
<!-- Full List -->
        <div class="font-mono text-xs max-h-96 overflow-y-auto">
          <%= cond do %>
            <% @display_mode == :track -> %>
              <%= for track <- @tracks do %>
                <div
                  class={[
                    "flex items-center space-x-1 hover:bg-gray-800 py-0.5 px-1 cursor-pointer transition-colors border-l-2 text-xs leading-tight",
                    case track.rank do
                      1 -> "border-pink-500 bg-pink-900/20"
                      2 -> "border-yellow-500 bg-yellow-900/20"
                      3 -> "border-cyan-500 bg-cyan-900/20"
                      _ -> "border-transparent"
                    end
                  ]}
                  phx-click="select_track"
                  phx-value-rank={track.rank}
                >
                  <span class={"#{rank_color(track.rank)} font-bold w-6 text-right"}>{rank_icon(track.rank)}{track.rank}</span>
                  <span class={"#{count_color(track.count)} w-6"}>[{track.count}]</span>
                  <span class="text-white font-semibold flex-1 truncate">{track.track.artist}</span>
                  <span class="text-gray-300">-</span>
                  <span class="text-gray-100 flex-1 truncate">{track.track.name}</span>
                </div>
              <% end %>
            <% @display_mode == :artist -> %>
              <%= for artist <- @artists do %>
                <div
                  class={[
                    "flex items-center space-x-2 hover:bg-gray-800 py-1 px-2 cursor-pointer transition-colors border-l-2",
                    case artist.rank do
                      1 -> "border-pink-500 bg-pink-900/20"
                      2 -> "border-yellow-500 bg-yellow-900/20"
                      3 -> "border-cyan-500 bg-cyan-900/20"
                      _ -> "border-transparent"
                    end
                  ]}
                  phx-click="select_artist"
                  phx-value-rank={artist.rank}
                >
                  <span class={"#{rank_color(artist.rank)} font-bold w-8 text-right text-xs"}>
                    {rank_icon(artist.rank)}{artist.rank}
                  </span>
                  <span class={"#{count_color(artist.count)} w-8 text-xs"}>[{artist.count}]</span>
                  <span class="text-white font-semibold flex-1 truncate text-xs">{artist.artist}</span>
                  <span class="text-gray-300 text-xs">-</span>
                  <span class="text-gray-100 flex-1 truncate text-xs">{length(artist.tracks)} tracks</span>
                </div>
              <% end %>
            <% @display_mode == :year -> %>
              <%= for year <- @years do %>
                <div
                  class={[
                    "flex items-center space-x-2 hover:bg-gray-800 py-1 px-2 cursor-pointer transition-colors border-l-2",
                    case year.rank do
                      1 -> "border-pink-500 bg-pink-900/20"
                      2 -> "border-yellow-500 bg-yellow-900/20"
                      3 -> "border-cyan-500 bg-cyan-900/20"
                      _ -> "border-transparent"
                    end
                  ]}
                  phx-click="select_year"
                  phx-value-rank={year.rank}
                >
                  <span class={"#{rank_color(year.rank)} font-bold w-8 text-right text-xs"}>
                    {rank_icon(year.rank)}{year.rank}
                  </span>
                  <span class={"#{count_color(year.count)} w-16 text-xs"}>
                    [{String.duplicate("█", min(year.bar_count, 8))} {year.count}]
                  </span>
                  <span class="text-white font-semibold flex-1 truncate text-xs">{year.year}</span>
                  <span class="text-gray-300 text-xs">-</span>
                  <span class="text-gray-100 flex-1 truncate text-xs">{length(year.tracks)} tracks</span>
                </div>
              <% end %>
            <% @display_mode == :playlist -> %>
              <%= for playlist <- @playlists do %>
                <div
                  class={[
                    "flex items-center space-x-2 hover:bg-gray-800 py-1 px-2 cursor-pointer transition-colors border-l-2",
                    case playlist.rank do
                      1 -> "border-pink-500 bg-pink-900/20"
                      2 -> "border-yellow-500 bg-yellow-900/20"
                      3 -> "border-cyan-500 bg-cyan-900/20"
                      _ -> "border-transparent"
                    end
                  ]}
                  phx-click="select_playlist"
                  phx-value-rank={playlist.rank}
                >
                  <span class={"#{rank_color(playlist.rank)} font-bold w-8 text-right text-xs"}>
                    {rank_icon(playlist.rank)}{playlist.rank}
                  </span>
                  <span class="text-gray-100 w-8 text-xs">[{length(playlist.tracks)}]</span>
                  <span class="text-white font-semibold flex-1 truncate text-xs">{playlist.title}</span>
                  <span class="text-gray-500 text-xs">({playlist.mean_year})</span>
                  <span class="text-gray-400 text-xs truncate">{playlist.owner_name}</span>
                </div>
              <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
    
<!-- Loading State -->
    <%= if @loading do %>
      <div class="synthwave-loading p-4 text-center max-w-3xl mx-auto">
        <div class="synthwave-progress-text mb-3 text-lg font-bold">
          ▲ PROCESSING BILLBOARD DATA ▲
        </div>
        <div class="synthwave-status-text mb-3 text-sm">
          {@progress_text}
        </div>
        <div class="font-mono">
          <!-- Progress bar -->
          <div class="synthwave-progress-bar h-6 w-full relative overflow-hidden rounded-sm">
            <div
              class="synthwave-progress-fill h-full transition-all duration-300 ease-out"
              style={"width: #{@progress}%"}
            >
            </div>
            <div class="absolute inset-0 flex items-center justify-center text-sm font-bold text-white font-mono">
              {@progress}%
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Details Modal - Outside synthwave container for proper layering -->
<%= if @show_modal do %>
  <div class="fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50" phx-click="close_modal">
    <div
      class="bg-gray-900 border-2 border-purple-500 rounded-lg p-4 max-w-3xl w-full mx-4 relative max-h-[90vh] overflow-y-auto"
      phx-click="stop_propagation"
    >
      <button class="absolute top-4 right-4 text-gray-400 hover:text-white text-2xl" phx-click="close_modal">×</button>

      <%= if @selected_track do %>
        <!-- Track Modal -->
        <div class="text-center mb-6">
          <div class="text-3xl mb-4">{rank_icon(@selected_track.rank)} {@selected_track.rank}</div>
          <div class="flex items-center justify-center space-x-4">
            <h2 class="text-xl font-bold text-white">
              {@selected_track.track.artist} - <span class="text-gray-300">{@selected_track.track.name}</span>
            </h2>
            <div class="flex space-x-2">
              <a
                href={Track.url(@selected_track.track)}
                target="_blank"
                class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-semibold transition-colors text-sm"
              >
                {String.capitalize(Atom.to_string(@selected_track.track.provider))}
              </a>
            </div>
          </div>
        </div>

        <div class="space-y-4">
          <div class="border-t border-gray-700 pt-4">
            <h3 class="text-lg font-semibold text-white mb-4">Found in playlists:</h3>
            <div class="space-y-2 max-h-96 overflow-y-auto">
              <%= for track <- @selected_track.tracks |> Enum.uniq_by(&{&1.provider, &1.playlist_id}) do %>
                <div class="bg-gray-800 p-3 rounded-lg">
                  <a
                    href={Playlist.url(track)}
                    target="_blank"
                    class="text-purple-400 hover:text-purple-300 text-sm text-center block break-all"
                  >
                    {Playlist.url(track)}
                  </a>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <%= if @selected_artist do %>
        <!-- Artist Modal -->
        <div class="text-center mb-6">
          <div class="text-3xl mb-4">{rank_icon(@selected_artist.rank)} {@selected_artist.rank}</div>
          <h2 class="text-2xl font-bold text-white mb-2">{@selected_artist.artist}</h2>
          <div class="text-lg text-gray-300">
            {@selected_artist.count} occurrences • {length(@selected_artist.tracks)} tracks
          </div>
        </div>

        <div class="space-y-4">
          <div class="border-t border-gray-700 pt-4">
            <h3 class="text-lg font-semibold text-white mb-4">Tracks by this artist:</h3>
            <div class="space-y-2 max-h-96 overflow-y-auto">
              <%= for track_group <- @selected_artist.tracks do %>
                <div class="bg-gray-800 p-4 rounded-lg flex items-center justify-between">
                  <div class="flex-1">
                    <div class="text-white font-semibold">{track_group.track.name}</div>
                    <div class="text-gray-400 text-sm">{track_group.count} occurrences</div>
                  </div>
                  <div class="flex space-x-2 ml-4">
                    <a
                      href={Track.url(track_group.track)}
                      target="_blank"
                      class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded font-semibold transition-colors text-sm"
                    >
                      {String.capitalize(Atom.to_string(track_group.track.provider))}
                    </a>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <%= if @selected_year do %>
        <!-- Year Modal -->
        <div class="text-center mb-6">
          <div class="text-3xl mb-4">{rank_icon(@selected_year.rank)} {@selected_year.rank}</div>
          <h2 class="text-2xl font-bold text-white mb-2">{@selected_year.year}</h2>
          <div class="text-lg text-gray-300">
            {@selected_year.count} occurrences • {length(@selected_year.tracks)} tracks
          </div>
        </div>

        <div class="space-y-4">
          <div class="border-t border-gray-700 pt-4">
            <h3 class="text-lg font-semibold text-white mb-4">Tracks from this year:</h3>
            <div class="space-y-2 max-h-96 overflow-y-auto">
              <%= for track_group <- @selected_year.tracks do %>
                <div class="bg-gray-800 p-4 rounded-lg flex items-center justify-between">
                  <div class="flex-1">
                    <div class="text-white font-semibold">{track_group.track.artist} - {track_group.track.name}</div>
                    <div class="text-gray-400 text-sm">{track_group.count} occurrences</div>
                  </div>
                  <div class="flex space-x-2 ml-4">
                    <a
                      href={Track.url(track_group.track)}
                      target="_blank"
                      class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded font-semibold transition-colors text-sm"
                    >
                      {String.capitalize(Atom.to_string(track_group.track.provider))}
                    </a>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <%= if @selected_playlist do %>
        <!-- Playlist Modal -->
        <div class="text-center mb-6">
          <div class="text-3xl mb-4">{rank_icon(@selected_playlist.rank)} {@selected_playlist.rank}</div>
          <h2 class="text-2xl font-bold text-white mb-2">{@selected_playlist.title}</h2>
          <div class="text-lg text-gray-400 mb-2">by {@selected_playlist.owner_name}</div>
          <div class="text-lg text-gray-300">
            {length(@selected_playlist.tracks)} tracks • Mean year: {@selected_playlist.mean_year}
          </div>
          <div class="mt-4">
            <a
              href={Playlist.url(@selected_playlist)}
              target="_blank"
              class="bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors"
            >
              Open {String.capitalize(Atom.to_string(@selected_playlist.provider))} Playlist
            </a>
          </div>
        </div>
        
<!-- Tab Navigation -->
        <div class="mb-6">
          <div class="flex space-x-2 border-b border-gray-700">
            <button
              phx-click="switch_playlist_tab"
              phx-value-tab="tracks"
              class={[
                "px-4 py-2 font-mono font-bold transition-colors duration-200",
                if(@playlist_modal_tab == :tracks,
                  do: "bg-purple-600 text-white border-b-2 border-purple-300",
                  else: "text-purple-400 hover:text-purple-300"
                )
              ]}
            >
              Tracks ({length(@selected_playlist.tracks)})
            </button>
            <button
              phx-click="switch_playlist_tab"
              phx-value-tab="similar"
              class={[
                "px-4 py-2 font-mono font-bold transition-colors duration-200",
                if(@playlist_modal_tab == :similar,
                  do: "bg-purple-600 text-white border-b-2 border-purple-300",
                  else: "text-purple-400 hover:text-purple-300"
                )
              ]}
            >
              Similar ({length(@selected_playlist.top_similar)})
            </button>
          </div>
        </div>
        
<!-- Tab Content -->
        <div class="space-y-4">
          <%= if @playlist_modal_tab == :tracks do %>
            <div>
              <div class="space-y-2 max-h-96 overflow-y-auto">
                <%= for track <- @selected_playlist.tracks do %>
                  <div class="bg-gray-800 p-4 rounded-lg flex items-center justify-between">
                    <div class="flex-1">
                      <div class="text-white font-semibold">{track.artist} - {track.name}</div>
                      <div class="text-gray-400 text-sm">{track.release_date.year}</div>
                    </div>
                    <div class="flex space-x-2 ml-4">
                      <a
                        href={Track.url(track)}
                        target="_blank"
                        class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded font-semibold transition-colors text-sm"
                      >
                        {String.capitalize(Atom.to_string(track.provider))}
                      </a>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <%= if @playlist_modal_tab == :similar do %>
            <div>
              <div class="space-y-2 max-h-96 overflow-y-auto">
                <%= for {similar_playlist, index} <- Enum.with_index(@selected_playlist.top_similar, 1) do %>
                  <div class="bg-gray-800 p-4 rounded-lg flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                      <span class="text-lg">
                        <%= case index do %>
                          <% 1 -> %>
                            🥇
                          <% 2 -> %>
                            🥈
                          <% 3 -> %>
                            🥉
                        <% end %>
                      </span>
                      <div class="flex-1">
                        <div class="text-white font-semibold">
                          {similar_playlist.similarity_score}% - {similar_playlist.title}
                        </div>
                        <div class="text-gray-400 text-sm">({similar_playlist.mean_year}) by {similar_playlist.owner_name}</div>
                      </div>
                    </div>
                    <div class="flex space-x-2 ml-4">
                      <a
                        href={Playlist.url(similar_playlist)}
                        target="_blank"
                        class="bg-purple-600 hover:bg-purple-700 text-white px-3 py-1 rounded font-semibold transition-colors text-sm"
                      >
                        Open
                      </a>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
