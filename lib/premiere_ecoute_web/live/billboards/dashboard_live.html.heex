<div class="min-h-screen text-white p-8 font-mono relative overflow-hidden synthwave-bg">
  <div class="max-w-6xl mx-auto">
    <.back href={~p"/billboards/#{@billboard.billboard_id}"}>{gettext("Back")}</.back>

    <div class="text-center mb-8">
      <.billboard title={@billboard.title} />

      <div class="text-center mb-6">
        <.link
          href={~p"/billboards/#{@billboard.billboard_id}/submission/new"}
          class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white rounded-lg text-sm font-medium transition-all duration-200 transform hover:scale-105 synthwave-button"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          {gettext("Submit your playlist")}
        </.link>
      </div>
    </div>

    <.async_result :let={_rankings} assign={@rankings}>
      <:loading>
        <div class="synthwave-loading p-8 text-center max-w-4xl mx-auto">
          <div class="synthwave-progress-text mb-6 text-2xl font-bold">
            {gettext("▲ PROCESSING BILLBOARD DATA ▲")}
          </div>
          <div class="synthwave-status-text mb-4 text-lg">
            {@progress.message}
          </div>
          <div class="font-mono">
            <!-- Progress bar -->
            <div class="synthwave-progress-bar h-8 w-full relative overflow-hidden rounded-sm">
              <div
                class="synthwave-progress-fill h-full transition-all duration-300 ease-out"
                style={"width: #{@progress.percentage}%"}
              >
              </div>
              <div class="absolute inset-0 flex items-center justify-center text-sm font-bold text-white font-mono">
                {@progress.percentage}%
              </div>
            </div>
          </div>
        </div>
      </:loading>
      <:failed :let={failure}>
        <div class="mt-4 p-4 border border-purple-500">
          <div class="text-purple-500 whitespace-pre-line">
            ┌─────────────────────────────────────────────────────────────────────┐
            │ ERROR: {String.pad_trailing(failure, 30)} │
            └─────────────────────────────────────────────────────────────────────┘
          </div>
        </div>
      </:failed>

      <div class="border border-purple-500 p-6 overflow-x-auto">
        <.tabs>
          <.tab mode="track" active={@display_mode}>{gettext("[BY TRACK]")}</.tab>
          <.tab mode="artist" active={@display_mode}>{gettext("[BY ARTIST]")}</.tab>
          <.tab mode="year" active={@display_mode}>{gettext("[BY YEAR]")}</.tab>
          <.tab mode="playlists" active={@display_mode}>{gettext("[BY PLAYLIST]")}</.tab>
        </.tabs>

        <div class="mb-12">
          <.podium :let={{entry, size, color}} entries={@podium} action="select">
            <%= cond do %>
              <% @display_mode == :track -> %>
                <div class={"text-white font-bold #{size}"}>[{entry.count}x]</div>
                <div class={"text-white font-semibold #{size} truncate"}>{entry.track.artist}</div>
                <div class={"#{color} #{size} truncate"}>{entry.track.name}</div>
              <% @display_mode == :artist -> %>
                <div class={"text-white font-bold #{size}"}>[{entry.count}x]</div>
                <div class={"text-white font-semibold #{size} truncate"}>{entry.artist}</div>
                <div class={"#{color} #{size} truncate"}>
                  {ngettext("%{count} track", "%{count} tracks", length(entry.tracks), count: length(entry.tracks))}
                </div>
              <% @display_mode == :year -> %>
                <div class={"text-white font-bold #{size}"}>[{entry.count}x]</div>
                <div class={"text-white font-semibold #{size} truncate"}>{entry.year}</div>
                <div class={"#{color} #{size} truncate"}>
                  {ngettext("%{count} track", "%{count} tracks", entry.track_count, count: entry.track_count)}
                </div>
              <% true -> %>
                <div></div>
            <% end %>
          </.podium>
        </div>

        <%= if @display_mode in [:track, :artist] do %>
          <.searchbar query={@search_query} placeholder={gettext("Search by artist or title...")} />
        <% end %>

        <div id="ranking" class="font-mono text-lg" phx-update="stream">
          <div
            :for={{id, row} <- @streams.ranking}
            class="flex items-center space-x-2 hover:bg-gray-800 p-1 cursor-pointer transition-colors"
            phx-click="select"
            phx-value-location="list"
            phx-value-rank={row.rank}
            id={id}
          >
            <span class={"#{rank_color(row.rank, @display_mode)} font-bold w-16 text-right"}>
              {rank_icon(row.rank, @display_mode)} {row.rank}
            </span>

            <%= if @display_mode == :track do %>
              <span class={"#{count_color(row.count)} w-12"}>[{row.count}x]</span>
              <span class="text-white font-semibold flex-1 truncate">{row.track.artist}</span>
              <span class="text-gray-300">-</span>
              <span class="text-gray-100 flex-1 truncate">{row.track.name}</span>
            <% end %>
            <%= if @display_mode == :artist do %>
              <span class={"#{count_color(row.count)} w-12"}>[{row.count}x]</span>
              <span class="text-white font-semibold flex-1 truncate">{row.artist}</span>
              <span class="text-gray-300">-</span>
              <span class="text-gray-100 flex-1 truncate">
                {ngettext("%{count} track", "%{count} tracks", length(row.tracks), count: length(row.tracks))}
              </span>
            <% end %>
            <%= if @display_mode == :year do %>
              <span class={"#{count_color(row.count)} w-96"}>[{String.duplicate("█", row.bar_count)} {row.count}x]</span>
              <span class="text-white font-semibold flex-1 truncate">{row.year}</span>
              <span class="text-gray-300">-</span>
              <span class="text-gray-100 flex-1 truncate">
                {ngettext("%{count} track", "%{count} tracks", length(row.tracks), count: length(row.tracks))}
              </span>
            <% end %>
            <%= if @display_mode == :playlists do %>
              <span class="text-gray-100 w-12">[{length(row.tracks)}x]</span>
              <span class="text-white font-semibold flex-1 truncate">{row.title}</span>
              <span class="text-gray-500 text-sm">({row.mean_year})</span>
              <span class="text-gray-400 text-right truncate">{row.owner_name}</span>
            <% end %>
          </div>
        </div>
      </div>
    </.async_result>
  </div>
</div>

<%= if @selected do %>
  <div class="fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50" phx-click="close_modal">
    <div
      class="bg-gray-900 border-2 border-purple-500 rounded-lg p-8 max-w-4xl w-full mx-4 relative"
      phx-click="stop_propagation"
    >
      <button class="absolute top-4 right-4 text-gray-400 hover:text-white text-2xl" phx-click="close_modal">×</button>

      <%= if @display_mode == :track do %>
        <div class="text-center mb-6">
          <div class="text-3xl mb-4">{rank_icon(@selected.rank, @display_mode)} {@selected.rank}</div>
          <div class="flex items-center justify-center space-x-4">
            <h2 class="text-xl font-bold text-white">
              {@selected.track.artist} - <span class="text-gray-300">{@selected.track.name}</span>
            </h2>
            <div class="flex space-x-2">
              <a
                href={PremiereEcoute.Discography.Playlist.Track.url(@selected.track)}
                target="_blank"
                class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-semibold transition-colors text-sm"
              >
                {String.capitalize(Atom.to_string(@selected.track.provider))}
              </a>
            </div>
          </div>
        </div>

        <div class="space-y-4">
          <div class="border-t border-gray-700 pt-4">
            <h3 class="text-lg font-semibold text-white mb-4">{gettext("Found in playlists:")}</h3>
            <div class="space-y-2 max-h-96 overflow-y-auto">
              <%= for track <- @selected.tracks |> Enum.uniq_by(&{&1.provider, &1.playlist_id}) do %>
                <div class="bg-gray-800 p-3 rounded-lg">
                  <a
                    href={PremiereEcoute.Discography.Playlist.url(track)}
                    target="_blank"
                    class="text-purple-400 hover:text-purple-300 text-sm text-center block break-all"
                  >
                    {PremiereEcoute.Discography.Playlist.url(track)}
                  </a>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <%= if @display_mode == :artist do %>
        <div class="text-center mb-6">
          <div class="text-3xl mb-4">{rank_icon(@selected.rank, @display_mode)} {@selected.rank}</div>
          <h2 class="text-2xl font-bold text-white mb-2">{@selected.artist}</h2>
          <div class="text-lg text-gray-300">
            {ngettext("%{count} occurrence", "%{count} occurrences", @selected.count, count: @selected.count)} • {ngettext(
              "%{count} track",
              "%{count} tracks",
              length(@selected.tracks),
              count: length(@selected.tracks)
            )}
          </div>
        </div>

        <div class="space-y-4">
          <div class="border-t border-gray-700 pt-4">
            <h3 class="text-lg font-semibold text-white mb-4">{gettext("Tracks by this artist:")}</h3>
            <div class="space-y-2 max-h-96 overflow-y-auto">
              <%= for track_group <- @selected.tracks do %>
                <div class="bg-gray-800 p-4 rounded-lg flex items-center justify-between">
                  <div class="flex-1">
                    <div class="text-white font-semibold">{track_group.track.name}</div>
                    <div class="text-gray-400 text-sm">
                      {ngettext("%{count} occurrence", "%{count} occurrences", track_group.count, count: track_group.count)}
                    </div>
                  </div>
                  <div class="flex space-x-2 ml-4">
                    <a
                      href={PremiereEcoute.Discography.Playlist.Track.url(track_group.track)}
                      target="_blank"
                      class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded font-semibold transition-colors text-sm"
                    >
                      {String.capitalize(Atom.to_string(track_group.track.provider))}
                    </a>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <%= if @display_mode == :year do %>
        <div class="text-center mb-6">
          <div class="text-3xl mb-4">{rank_icon(@selected.rank, @display_mode)} {@selected.rank}</div>
          <h2 class="text-2xl font-bold text-white mb-2">{@selected.year}</h2>
          <div class="text-lg text-gray-300">
            {ngettext("%{count} occurrence", "%{count} occurrences", @selected.count, count: @selected.count)} • {ngettext(
              "%{count} track",
              "%{count} tracks",
              length(@selected.tracks),
              count: length(@selected.tracks)
            )}
          </div>
        </div>

        <div class="space-y-4">
          <div class="border-t border-gray-700 pt-4">
            <h3 class="text-lg font-semibold text-white mb-4">{gettext("Tracks from this year:")}</h3>
            <div class="space-y-2 max-h-96 overflow-y-auto">
              <%= for track_group <- @selected.tracks do %>
                <div class="bg-gray-800 p-4 rounded-lg flex items-center justify-between">
                  <div class="flex-1">
                    <div class="text-white font-semibold">{track_group.track.artist} - {track_group.track.name}</div>
                    <div class="text-gray-400 text-sm">
                      {ngettext("%{count} occurrence", "%{count} occurrences", track_group.count, count: track_group.count)}
                    </div>
                  </div>
                  <div class="flex space-x-2 ml-4">
                    <a
                      href={PremiereEcoute.Discography.Playlist.Track.url(track_group.track)}
                      target="_blank"
                      class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded font-semibold transition-colors text-sm"
                    >
                      {String.capitalize(Atom.to_string(track_group.track.provider))}
                    </a>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <%= if @display_mode == :playlists do %>
        <!-- Playlist Modal -->
        <div class="text-center mb-6">
          <div class="text-3xl mb-4">{rank_icon(@selected.rank, @display_mode)} {@selected.rank}</div>
          <h2 class="text-2xl font-bold text-white mb-2">{@selected.title}</h2>
          <div class="text-lg text-gray-400 mb-2">by {@selected.owner_name}</div>
          <div class="text-lg text-gray-300">
            {ngettext("%{count} track", "%{count} tracks", length(@selected.tracks), count: length(@selected.tracks))} • {gettext(
              "Mean year: %{year}",
              year: @selected.mean_year
            )}
          </div>
          <div class="mt-4">
            <a
              href={PremiereEcoute.Discography.Playlist.url(@selected)}
              target="_blank"
              class="bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors"
            >
              {gettext("Open %{provider} Playlist", provider: String.capitalize(Atom.to_string(@selected.provider)))}
            </a>
          </div>
        </div>
        
<!-- Tab Navigation -->
        <div class="mb-6">
          <div class="flex space-x-2 border-b border-gray-700">
            <button
              phx-click="switch_playlist_tab"
              phx-value-tab="tracks"
              class={[
                "px-4 py-2 font-mono font-bold transition-colors duration-200",
                if(@playlist_modal_tab == :tracks,
                  do: "bg-purple-600 text-white border-b-2 border-purple-300",
                  else: "text-purple-400 hover:text-purple-300"
                )
              ]}
            >
              {gettext("Tracks (%{count})", count: length(@selected.tracks))}
            </button>
            <button
              phx-click="switch_playlist_tab"
              phx-value-tab="similar"
              class={[
                "px-4 py-2 font-mono font-bold transition-colors duration-200",
                if(@playlist_modal_tab == :similar,
                  do: "bg-purple-600 text-white border-b-2 border-purple-300",
                  else: "text-purple-400 hover:text-purple-300"
                )
              ]}
            >
              {gettext("Similar (%{count})", count: length(@selected.top_similar))}
            </button>
          </div>
        </div>
        
<!-- Tab Content -->
        <div class="space-y-4">
          <%= if @playlist_modal_tab == :tracks do %>
            <div>
              <div class="space-y-2 max-h-96 overflow-y-auto">
                <%= for track <- @selected.tracks do %>
                  <div class="bg-gray-800 p-4 rounded-lg flex items-center justify-between">
                    <div class="flex-1">
                      <div class="text-white font-semibold">{track.artist} - {track.name}</div>
                      <div class="text-gray-400 text-sm">{track.release_date.year}</div>
                    </div>
                    <div class="flex space-x-2 ml-4">
                      <a
                        href={PremiereEcoute.Discography.Playlist.Track.url(track)}
                        target="_blank"
                        class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded font-semibold transition-colors text-sm"
                      >
                        {String.capitalize(Atom.to_string(track.provider))}
                      </a>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <%= if @playlist_modal_tab == :similar do %>
            <div>
              <div class="space-y-2 max-h-96 overflow-y-auto">
                <%= for {similar_playlist, index} <- Enum.with_index(@selected_playlist.top_similar, 1) do %>
                  <div class="bg-gray-800 p-4 rounded-lg flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                      <span class="text-lg">
                        <%= case index do %>
                          <% 1 -> %>
                            🥇
                          <% 2 -> %>
                            🥈
                          <% 3 -> %>
                            🥉
                        <% end %>
                      </span>
                      <div class="flex-1">
                        <div class="text-white font-semibold">
                          {similar_playlist.similarity_score}% - {similar_playlist.title}
                        </div>
                        <div class="text-gray-400 text-sm">({similar_playlist.mean_year}) by {similar_playlist.owner_name}</div>
                      </div>
                    </div>
                    <div class="flex space-x-2 ml-4">
                      <a
                        href={PremiereEcoute.Discography.Playlist.url(similar_playlist)}
                        target="_blank"
                        class="bg-purple-600 hover:bg-purple-700 text-white px-3 py-1 rounded font-semibold transition-colors text-sm"
                      >
                        {gettext("Open")}
                      </a>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
