# Spotify API
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:4000/auth/spotify/callback

# Twitch API
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TWITCH_REDIRECT_URI=http://localhost:4000/auth/twitch/callback
TWITCH_WEBHOOK_CALLBACK_URL=http://localhost:4000/webhooks/twitch
TWITCH_WEBHOOK_SECRET=your_webhook_secret

# Twitch Extension (get from Twitch Developer Console - Extension Secrets)
# IMPORTANT: This should be the base64-encoded secret provided by Twitch
TWITCH_EXTENSION_SECRET=your_base64_encoded_extension_secret

# Discord API
DISCORD_BOT_TOKEN=your_discord_bot_token

# BuyMeACoffee API
BUYMEACOFFEE_API_KEY=your_buymeacoffee_api_key

# Database (production)
POSTGRES_DATABASE=premiere_ecoute_prod
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_HOSTNAME=localhost

# Security
SECRET_KEY_BASE=your_secret_key_base

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn

# Grafana Cloud (optional - for automatic dashboard upload via PromEx)
# Get these from: https://grafana.com/orgs/<your-org>/cloud-portal
# Host should be your Grafana Cloud instance URL (e.g., https://yourorg.grafana.net)
# API Token needs Editor or Admin permissions to upload dashboards
GRAFANA_HOST=https://yourorg.grafana.net
GRAFANA_API_TOKEN=your_grafana_api_token